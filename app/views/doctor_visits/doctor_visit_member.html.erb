  
  <%= render 'user_details/profile' %>
   
  <div class="contentRight"> 
  
      <br/>
    
      <h3> Doctor Visits </h3>
    <br/>
    
      <table class="table table-bordered">
        <tr>
          
          <th> Date </th>
          <th> Doctor </th>
          <th> Hospital </th>
          <th> Reason for Visit </th>
          <th> Details </th>
        </tr>
    
        <% @doctor_visits.each do |visit| %>
       
        <tr>
          <td><%= visit.date_of_visit %></td>
          <td><%= visit.doctor %></td>
          <td><%= visit.hospital %></td>
          <td><%= visit.reason_for_visit %></td>
          <td><%= visit.details %></td>    
        </tr>
        <% end %>
      </table>
 <%=  will_paginate  @doctor_visits, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>      
    
      <div class="text-right">
        <%= link_to "Add Visit", new_doctor_visit_path, class:"contentRightBottomHeadBlueLink", "data-ajax" => "false" %>
        <br/><br/>
      </div>
    
    <br/><br/>
    <h3> Health Records </h3>
    <br/>
    
      <table class="table table-bordered">
        <tr>
          <th>Record Type </th>
          <th> Record Date </th>
          <th> Record </th>
        </tr>
    
        <% @health_records.each do |record| %>
       
        <tr>
          <td><%= record.health_record_type %></td>
          <td><%= record.health_record_date %></td>
          <td> <%= link_to "Download", cloudinary_url(record.health_record, :flags => :attachment) %></td>
        </tr>
        <% end %>
      </table>

      <div class="text-right">
        <%= link_to "Add Record", new_health_record_path, class:"contentRightBottomHeadBlueLink", "data-ajax" => "false" %>
        <br/><br/>
      </div>
    
        
  </div><!-- content right ends here -->
