<div class="wrapper">
  <div class="container">
    
    <div class="row">
      
      <div class="col-md-4">
          <h3> Upload Profile Picture</h3>
            <%= form_for @user, :html => {:multipart => true} do |f| %>
    
               
        <%= f.file_field :image, class: "form-control" %>
        <br/><br/>
    
               <%= f.submit "Upload", class: "btn btn-success" %>
            <% end %>
      </div>
    </div>
    
  </div>
</div>