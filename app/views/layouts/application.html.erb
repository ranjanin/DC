<!DOCTYPE html>
<html>
<head>
  <title>VOW</title>
  
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  
  
</head>
<body>

 
 
<% if user_signed_in? %>
 <div class="wrapper">

	  <div class="container header headerBG">
 		    <div class="logo">
  				<a href="/" data-ajax="false">
	  			<!-- 	<img src="images/logoInside.png" width="100%" alt="" title="" /> -->
            <%= image_tag "logoInside.png" %>
			   	</a>
			  </div>
      
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">   
            
            <li class="dropdown navbar-profile">
              
              <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                <span class="navbar-profile-label"><%= current_user.user_detail.first_name %> &nbsp;                 </span>
                <i class="fa fa-caret-down"></i>
              </a>
              
              <ul class="dropdown-menu" role="menu">
                 <li>
                   <%= link_to user_detail_path(current_user.user_detail) do %>
                      <i class="fa fa-user"></i> 
                        &nbsp;&nbsp;My Profile
                   <% end %>
                 </li>
                 <li class="divider"></li>
                 <li>
                   <%= link_to destroy_user_session_path do %>
                     <i class="fa fa-sign-out"></i> 
                       &nbsp;&nbsp;Logout
                   <% end %>
                 </li>
              </ul>     
            </li>
          </ul>  
      </div><!-- navbar collapse ends here -->
    </div><!-- container header headerBG ends here -->
  

         
    </div><!-- wrapper ends here -->
  
<% end %>
  <%= yield %>  
  
 
 
 

</body>
</html>
