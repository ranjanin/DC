<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no" />
	<meta name="HandheldFriendly" content="true" />
	<link rel="icon" type="image/x-icon" href="">
	<meta property="description" content=" " />
	<meta name="keywords" content="" />
	<link rel="stylesheet" media="all" href="styles/styles.css" />
	<link rel="stylesheet" media="all" href="styles/responsive.css" />
	<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css' />
	<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
	

	<div class="wrapper" >
		<div class="registerFormWrapperWrap">
       <div class="registerFormWrapper">
			
           <div class="registerFormWrapperLogo">
             <%= image_tag "logo.png" %>
				   </div>
         
           <div class="registerFormWrapperText">			
               Please enter your details to register.
              
               <% if alert %>
                <div class="row">
                  <div class="col-md-4"></div>
                  <div class="col-md-4">
                  <div class="alert alert-danger"><%= alert %></div>
                  </div>
                </div>
               <% end %>
			     </div>
            <br/>
         
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  :html => {:'data-ajax' => 'false'}) do |f| %>
         <div class="row">
           <div class="col-md-4"></div>
           <div class ="col-md-4">
             <div class="alet alert-danger"><%= devise_error_messages! %></div>
           </div>
         </div>
         <br/>
				     <div class="registerFormWrapperInput">
					
               <%= f.email_field :email, autofocus: true, placeholder: "Email ID" %>
					     <div class="clearfix"></div>
				       <%= f.password_field :password, autocomplete: "off", :placeholder => "Password (Min 8 characters)" %>             <div class="clearfix"></div>
					     <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password (Same as above)" %>
               <div class="clearfix"></div>
					     <br/>
               <div class="registerFormWrapperInputButton">
						   <%= f.submit "SUBMIT" %>

					     </div>
               <div class="clearfix"></div>
				     </div><!-- registerFormWrapperInput ends here -->
				 <% end %>
				     <div class="clearfix"></div>
         <% if false %>    
             <div class="registerFormWrapperInput">
					      <div class="divRight">
                   <%= render "devise/shared/links" %>
			 		       </div>         
			           <div class="clearfix"></div>
				      </div><!-- registerFormWrapperInput ends here -->
         <% end %>
         
       </div><!-- registerFormWrapper ends here -->
		</div><!-- registerFormWrapperWrap ends here -->
	</div><!-- wrapper ends here -->
  
</body>
</html>