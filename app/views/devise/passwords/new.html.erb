<div class="wrapper" >
		<div class="registerFormWrapperWrap">

			<div class="registerFormWrapper">
				<div class="registerFormWrapperLogo">
          <%= image_tag "logo.png"%>
				</div>
				
        <div class="registerFormWrapperText">
					Oh, It's sad to hear that you forgot your password. Don't worry! Enter your registered email-id and 
					we will send you the link to reset your password.
				</div>
        
   <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, "data-ajax" => "false" }) do |f| %>
        <div class="row">
           <div class="col-md-4"></div>
           <div class ="col-md-4">
             <div class="alet alert-danger"><%= devise_error_messages! %></div>
           </div>
         </div>
         <br/>
      
				<div class="registerFormWrapperInput">
            <%= f.email_field :email, autofocus: true, placeholder: "Email ID" %>
					  <div class="clearfix"></div><br/>
					  <div class="registerFormWrapperInputButton">
					   <%= f.submit "SUBMIT" %>
				    </div>
				</div><!-- registerFormWrapperInput ends here -->
   <% end %>
				<div class="clearfix"></div>
			</div><!-- registerFormWrapper ends here -->
		</div><!-- registerFormWrapperwrap ends here -->
</div><!-- wrapper ends here -->



