<%= render 'user_details/profile' %>
   
  <div class="contentRight"> 
  
      <br/><br/><br/>
<div class="wrapper">
  <div class="container">
    
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-5">

        <h3> Add Health Records </h3>
        <br/>
        <%= form_for @health_record, :html => {:multipart => true, :"data-ajax" => "false"} do |f| %>

          <div class="form-group">
            <label> Family Member </label>
            <%= f.collection_select :family_member_id, FamilyMember.where(:user_id => current_user.id), :id, :relation, {:prompt => "Select Member"}, {:class => "form-control"} %>
          </div>
        
           <div class="form-group">
            <%= f.label :record_type %>
            <%= f.text_field :health_record_type, class: "form-control" %>
           </div>
        
           <div class="form-group">
            <%= f.label :record_date %>
            <%= f.date_field :health_record_date, class: "form-control" %>
           </div>
        
           <div class="form-group">
            <%= f.label :record %>
            <%= f.file_field :health_record, class: "form-control" %>
           </div>
        <%= f.submit "Submit", class: "btn btn-blue" %>
        
        <% end %>
      </div><!-- col md ends here -->
    </div><!-- row end shere -->
  </div><!-- container ends here -->
</div><!-- wrapper ends here -->
</div><!-- content right ends here -->